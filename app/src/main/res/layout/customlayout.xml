<LinearLayout
    android:padding="10sp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/listview_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000000"
        />

    <RelativeLayout
        android:id="@+id/layoutleft"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/presenttext"
            android:layout_alignParentLeft="true"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Attended"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/listview_present"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/presenttext"
            android:layout_marginLeft="10sp"
            android:textColor="#000000"
            />
        <TextView
            android:text="Total"
            android:textColor="#000000"
            android:id="@+id/totaltext"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/presenttext"
            />
        <TextView
            android:textColor="#000000"
            android:id="@+id/listview_total"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/listview_present"
            android:layout_toRightOf="@id/totaltext"
            android:layout_marginLeft="10sp"/>


        <TextView
            android:id="@+id/listview_percentage"
            android:textColor="#000000"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>